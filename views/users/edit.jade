extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href='/') CREATE
                li
                    a(href='/users/') READ
                li.active
                    a(href='/users/') UPDATE
                li
                    a(href='/users/') DELETE
    h1.well.lead Edit User
        form(method='POST' action='/users/#{user.name}')
                input(type='hidden', name='_method', value='PUT')
                div.form-group
                label Name
                input.form-control#name(type='text' name='name', value='#{user.name}')
                div.form-group
                label Email
                input.form-control#email(type='text', name='email', value='#{user.email}')
                div.form-group
                label Phone:
                input.form-control#phone(type='text', name='phone', value='#{user.phone}')
                div.form-group
                button.btn.btn-success.btn-lg(type='submit') Update