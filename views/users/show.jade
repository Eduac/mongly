extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href='/') CREATE
                li
                    a(href='/users/') READ
                li.active
                    a(href='/users/') UPDATE
                li.active
                    a(href='/users/') DELETE
    table.table.table-bordered.lead
        tr
            td Name: #{user.name}
            td Email: #{user.email}
            td Phone: #{user.phone}
            td
                a(href='/users/#{user.name}/edit').btn.btn-default.btn-info Update
            td
                form(action='/users/#{user.name}', method='POST')
                    input(type='hidden', name='_method', value='DELETE')
                    button.btn.btn-default.btn-danger Delete
